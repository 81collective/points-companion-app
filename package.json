{
  "name": "points-companion-app",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev --turbopack",
    "build": "next build",
    "start": "next start",
    "lint": "next lint --max-warnings=0",
    "prepare": "husky",
    "icons": "node scripts/generate-icons.mjs",
    "update-cards": "node scripts/update-cards.mjs",
    "check-cards": "node scripts/check-cards.mjs",
    "analyze": "ANALYZE=true npm run build",
    "build:analyze": "npm run analyze",
    "perf:audit": "npm run build && npm run start & sleep 5 && lighthouse http://localhost:3000 --output html --output-path ./lighthouse-report.html",
    "perf:memory": "node --expose-gc --max-old-space-size=4096 node_modules/.bin/next build",
    "bundle:analyze": "npm run analyze",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:ui": "jest --testPathPatterns=components",
    "test:utils": "jest --testPathPatterns=lib",
    "test:api": "jest --testPathPatterns=api",
    "test:e2e": "playwright test",
    "test:e2e:headed": "playwright test --headed",
    "test:all": "npm run test && npm run test:e2e",
    "test:ci": "jest --ci --coverage --watchAll=false",
    "precommit": "lint-staged"
  },
  "dependencies": {
    "@googlemaps/js-api-loader": "^1.16.10",
    "@hookform/resolvers": "^5.2.1",
    "@radix-ui/react-dialog": "^1.1.14",
    "@radix-ui/react-select": "^2.2.5",
    "@radix-ui/react-slot": "^1.2.3",
    "@supabase/ssr": "^0.6.1",
    "@supabase/supabase-js": "^2.53.0",
    "@tanstack/react-query": "^5.84.1",
    "@tanstack/react-query-devtools": "^5.84.1",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "critters": "^0.0.23",
    "framer-motion": "^12.23.12",
    "jspdf": "^3.0.1",
    "jspdf-autotable": "^5.0.2",
    "lucide-react": "^0.535.0",
    "next": "15.4.5",
    "openai": "^5.11.0",
    "otplib": "^12.0.1",
    "plaid": "^37.0.0",
    "qrcode": "^1.5.4",
    "react": "19.1.0",
    "react-dom": "19.1.0",
    "react-dropzone": "^14.3.8",
    "react-hook-form": "^7.61.1",
    "react-markdown": "9.0.3",
    "recharts": "^3.1.0",
    "remark-gfm": "4.0.0",
    "tailwind-merge": "^3.3.1",
    "use-debounce": "^10.0.5",
    "web-vitals": "^5.1.0",
    "yup": "^1.6.1",
    "zod": "^3.25.76",
    "zustand": "^5.0.7"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3",
    "@playwright/test": "^1.54.2",
    "@testing-library/jest-dom": "^6.6.4",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/google.maps": "^3.58.1",
    "@types/jest": "^30.0.0",
    "@types/node": "^20.19.9",
    "@types/qrcode": "^1.5.5",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "@types/webpack-bundle-analyzer": "^4.7.0",
    "autoprefixer": "^10.4.16",
    "eslint": "^9",
    "eslint-config-next": "15.4.5",
    "husky": "^9.1.7",
    "jest": "^30.0.5",
    "jest-environment-jsdom": "^30.0.5",
    "lint-staged": "^15.5.2",
    "postcss": "^8.4.32",
    "postcss-nesting": "^13.0.2",
    "sharp": "^0.33.5",
    "tailwindcss": "^3.4.0",
    "typescript": "^5",
    "webpack-bundle-analyzer": "^4.10.2"
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx}": [
      "eslint --fix"
    ]
  }
}
